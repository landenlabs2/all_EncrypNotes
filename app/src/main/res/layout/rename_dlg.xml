<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:padding="10dp"
    android:layout_margin="10dp" >

    <TextView
        android:id="@id/dlg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:text="Rename" />

    <TextView
        android:id="@+id/from_lb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dlg_title"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:padding="4dp"
        android:text="From:" />

    <EditText
        android:id="@+id/from_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/from_lb"
        android:background="@drawable/round_border"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:padding="4dp" />

    <TextView
        android:id="@+id/to_lb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/from_value"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:padding="4dp"
        android:text="To:" />


    <EditText
        android:id="@+id/to_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/to_lb"
        android:background="@drawable/round_border"
        android:hint="new name"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:padding="4dp" />

    <include
        layout="@layout/cancel_ok_inc"
        android:layout_below="@id/to_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

</RelativeLayout>