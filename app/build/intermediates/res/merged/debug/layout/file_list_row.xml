<?xml version="1.0" encoding="utf-8"?>

<!-- not short clickable -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/fl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="name"
        android:textSize="@dimen/Normal20" />

    <TextView
        android:id="@+id/fl_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="hint"
        android:textColor="#800000"
        android:textSize="@dimen/Normal20"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/fl_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_name"
        android:layout_alignParentLeft="true"
        android:text="mm/dd/yy hh:mm"
        android:textColor="#0000FF" />

    <TextView
        android:id="@+id/fl_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_name"
        android:gravity="center"
        android:text="v1.2"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/fl_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_name"
        android:layout_alignParentRight="true"
        android:text="123,456"
        android:textColor="#0000FF" />

</RelativeLayout>
