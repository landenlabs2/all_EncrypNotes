<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyThemeDark" parent="@android:style/Theme">
        <item name="android:alertDialogTheme">@android:style/Theme.Dialog</item>
    </style>

    <style name="MyThemeLight" parent="@android:style/Theme.Light">
        <item name="android:alertDialogTheme">@android:style/Theme.Holo.Light.Dialog</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
        
        android:Theme.Holo.Light.DarkActionBar Adds actionBar and popup option menu.
        android:Theme.Light older bottom panel option menu.
    -->
    <!-- 
    <style name="AppTheme" parent="@android:Theme.WithActionBar">
    <style name="AppTheme" parent="@android:Theme.Holo.Light.DarkActionBar">
      -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="passwordButtonStyle">@style/PasswordButtonStyle</item>
        <item name="passwordGridStyle">@style/PasswordGridStyle</item>
    </style>

    <style name="OpenDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#00FF00</item>
    </style>

    <style name="SaveDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#FFFF00</item>
    </style>

    <style name="FileListDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#FFFF00</item>
    </style>

    <style name="PasswordButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>


    <!-- Define custom attributes for passwordGrid -->
    <declare-styleable name="passwordGrid">
        <attr name="drawOn" format="color|reference" />
        <attr name="drawOff" format="color|reference" />
        <attr name="pathWidth" format="integer" />
        <attr name="pathAlpha" format="integer" />
        <attr name="pathColor" format="color" />
    </declare-styleable>

    <style name="PasswordGridStyle" parent="@android:style/Widget.GridView">
        <!--  Style custom attributes.  -->
        <item name="drawOff">@drawable/pattern_off</item>
        <item name="drawOn">@drawable/pattern_on</item>
        <item name="pathWidth">24</item>
        <item name="pathAlpha">128</item>
        <item name="pathColor">@color/green</item>

        <!-- Style standard attributes -->
        <item name="android:background">@drawable/pattern_bg</item>
    </style>

    <style name="foo" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">#ffc0c0c0</item>
    </style>

    <style name="EditTextStype" parent="@android:style/Widget.EditText">
        <!--
        <item name="android:textAppearance">@style/textNormal13</item>
        -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/round_border</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>